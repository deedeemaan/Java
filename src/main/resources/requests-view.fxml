<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.map_toysocialnetwork_gui.controller.RequestsController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="tableView" prefHeight="330.0" prefWidth="600.0">
              <columns>
                  <TableColumn fx:id="tableColumnID" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="tableColumnFirstName" prefWidth="75.0" text="First Name" />
                <TableColumn fx:id="tableColumnLastName" prefWidth="75.0" text="Last Name" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#handleAcceptRequest" text="Accept" />
            <Button mnemonicParsing="false" onAction="#handleRejectRequest" text="Decline"  />
         </children>
      </VBox>
   </children>
</AnchorPane>
